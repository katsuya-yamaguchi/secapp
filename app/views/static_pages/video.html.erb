  <div class="content">
    <div class="col-12 mx-auto my-1">
      <video id="my-video" class="card-img-top" controls controlslist="nodownload" preload="auto" width="100%" height="264" poster="" data-setup="{}">
        <source src="<%= asset_path "https://object-storage.tyo1.conoha.io/v1/nc_ae525541a58a443c98717ded126b6ac3/shirobuhi_obs/uploads/#{@file}" %>" type="video/mp4">
      </video>
      <div class="mt-3">
        <h3 class="font-weight-bold"><%= @name %></h3>
        <div id="div-like" style="display: inline;">
          <%= render partial: "likes", locals: {video: @video_data[0]} %>
        </div>
      </div>
      <div class="mt-3 border-top">
        <h5 class="font-weight-bold pt-2">説明</h5>
        <p><%= @description %></p>
      </div>
    </div>
  </div>


