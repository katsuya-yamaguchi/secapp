<! DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SHIROBUHI &mdash; Security Learning.</title>
    <meta name="viewport" content="width=device-width, initial-scale=1 shrink-to-fit=no">
    <meta name="description" content="「自分でできるセキュリティ対策」をテーマにした学習サイトです。"/>
    <meta property="og:title" content=""/>
    <meta property="og:image" content=""/>
    <meta property="og:url" content=""/>
    <meta property="og:site_name" content=""/>
    <meta property="og:description" content=""/>
    <meta name="twitter:title" content=""/>
    <meta name="twitter:image" content=""/>
    <meta name="twitter:url" content=""/>
    <meta name="twitter:card" content=""/>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:300,400,500,700,800" rel="stylesheet">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>

  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top nav-top justify-content-between">
      <a class="navbar-brand text-center" href="#">SHIROBUHI</a>
        <% if user_signed_in? then%>
            <%= link_to "Logout - #{current_user.email.split("@")[1]}", destroy_user_session_path, class: "nav-link ml-auto btn btn-outline-light", style: "font-size: 0.5rem" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link ml-auto btn btn-outline-light", style: "font-size: 0.5rem" %>
        <% end %>
    </nav>

    <%= yield %>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-bottom text-center nav-bottom menu-bar">
      <a class="nav-item nav-link col-4 menu-bar-item" id="item-home" href="/" style="font-size: 2rem;"><i class="fa fa-home"></i></a>
      <a class="nav-item nav-link col-4 menu-bar-item" id="item-search" href="/search" style="font-size: 2rem;"><i class="fa fa-search"></i></a>
      <a class="nav-item nav-link col-4 menu-bar-item" id="item-mypage" href="/mypage" style="font-size: 2rem;"><i class="fa fa-user"></i></a>
    </nav>

    <%= javascript_include_tag "application", 'data-turbolinks-track': "reload" %>
    <%= yield :index_pagination %>
    <%= yield :search_pagination %>

    <script>
      $(function(){
        let current_path = location.pathname.split('/')[1];
        if(current_path !== 'search' && current_path !== 'mypage'){
          current_path = 'home';
        }
        $(`#item-${current_path}`).addClass('disabled');
      });
    </script>

  </body>
</html>
